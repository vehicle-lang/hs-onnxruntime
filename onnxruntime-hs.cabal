cabal-version:      3.0
name:               onnxruntime-hs
version:            0.1.10.0
license:            BSD-3-Clause
author:             Wen Kokke
maintainer:         wenkokke@users.noreply.github.com
extra-source-files:
  cbits/onnxruntimeHS.c
  CHANGELOG.md
  include/onnxruntimeHS.h

library
  exposed-modules:  OnnxRuntime
  hs-source-dirs:   src
  build-depends:    base
