  includes:         include/onnxruntimeHS.h
  install-includes: include/onnxruntimeHS.h
  c-sources:        cbits/onnxruntimeHS.c
  default-language: Haskell2010

executable onnxruntime-version
  main-is:          Main.hs
  hs-source-dirs:   app
  build-depends:
    , base
    , onnxruntime-hs

  default-language: Haskell2010
